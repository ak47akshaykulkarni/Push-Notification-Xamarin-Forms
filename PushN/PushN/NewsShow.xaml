<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PushN.NewsShow"
             Title="Json Consume SS">
  
  <ScrollView Orientation="Vertical">
    <StackLayout Orientation="Vertical">
      <Button x:Name="bb" Text ="Get Json"/>
      <ListView x:Name="MainListView" HasUnevenRows="True">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Orientation="Horizontal" Padding="10">
                <Label Text="{Binding Value}" Font="Large" TextColor="Gray"/>
                <Label Text="{Binding Text}" TextColor="Aqua" Font="Large" />
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ScrollView>
</ContentPage>